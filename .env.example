# Environment Configuration
NODE_ENV=development
BUILD_TARGET=development

# Database Configuration
POSTGRES_DB=vulnerable_webapp
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=webapp_password
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=weak-secret-key-for-education
JWT_REFRESH_SECRET=weak-refresh-secret
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=Vulnerable Task Manager
VITE_APP_VERSION=1.0.0

# Security Configuration (for educational purposes)
UPLOAD_MAX_SIZE=10485760
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Production Configuration (when NODE_ENV=production)
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# Container Security
ENABLE_CONTAINER_SCANNING=false
SECURITY_SCAN_REGISTRY=docker.io