# Production Environment Configuration
NODE_ENV=production
BUILD_TARGET=production

# Database Configuration (Use strong credentials in production)
POSTGRES_DB=vulnerable_webapp_prod
POSTGRES_USER=webapp_user_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_STRONG_REFRESH_SECRET_AT_LEAST_32_CHARS
CORS_ORIGIN=https://yourdomain.com

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=https://api.yourdomain.com
VITE_APP_NAME=Vulnerable Task Manager
VITE_APP_VERSION=1.0.0

# Security Configuration
UPLOAD_MAX_SIZE=5242880
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50

# Production Ports
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring and Logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# Container Security
ENABLE_CONTAINER_SCANNING=true
SECURITY_SCAN_REGISTRY=your-registry.com